// Imports
@import 'normalize'

// Variables
main-font = 'Karma', serif

// Main Page Background
//-------------------------------------------------------------------
*
  font-family: main-font

body
  display: flex
  flex-direction: column
  height: 100vh
  align-items: center
  justify-content: space-around

.title
  text-align: center
  font-size: 80px
  margin: 0px

.main
  background-color: #ada
  height: 300px
  width: 400px
  display: flex
  flex-direction: column

.quote-display
  display: flex
  height: 70%
  font-size: 90px
  align-items: center
  justify-content: center

.quote-random
  font-size: 20px
  width: 100%
  height: 30%
  text-transform: uppercase

.quotation-mark
  font-family: main-font

.share
  height: 200px
  width: 200px

.tweet-pic
  position: absolute
  z-index: -20

#tweet
  position: relative
  height: 82px
  width: 200px
  display: block

.fade
  -webkit-animation: fade 1s

@keyframes fade
  0% { -webkit-filter: opacity(0); }
  100% { -webkit-filter: opacity(1); }
